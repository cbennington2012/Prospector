<UserControl x:Class="Prospector.App.Controls.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prospector.App.Controls"
             mc:Ignorable="d">
    <StackPanel>
        <StackPanel Name="NavigationContainer" Orientation="Horizontal">
            <Button Name="CalculatorButton" Click="CalculatorButton_OnClick">Calculator</Button>
            <Button Name="HoldingsButton" Click="HoldingsButton_OnClick">Holdings</Button>
            <Button Name="TransactionsButton" Click="TransactionsButton_OnClick">Transactions</Button>
        </StackPanel>
        <Separator Foreground="White" Width="Auto" ></Separator>
        <Grid Width="Auto" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <ContentControl Name="Container">
                <Label>Welcome to Prospector</Label>
            </ContentControl>
        </Grid>
    </StackPanel>
</UserControl>
