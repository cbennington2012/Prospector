@using System.Web.Mvc.Html
@using System.Web.Optimization

<!DOCTYPE html>

<html>
<head>
    <title>Prospector - @ViewBag.Title</title>
    @Styles.Render("~/bundles/prospectorstyles")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-plugins")
</head>
    <body>
    <div class="outer-container">
        <div class="container">
            <h2>Prospector</h2>
        </div>
        <div class="navbar">
